# Server Configuration
NODE_ENV=staging
PORT=3000

# Registry Configuration
REGISTRY=ghcr.io
IMAGE_NAME=yuciferr/task-management

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres_staging
POSTGRES_PASSWORD=staging_password_example  # Bu değer GitHub Secrets'tan alınacak
POSTGRES_DB=task_management_staging

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_staging_password  # Bu değer GitHub Secrets'tan alınacak

# Domain Configuration
DOMAIN=staging.taskmanagement.com

# SSL Configuration
SSL_CERTIFICATE=/etc/nginx/certs/staging.crt
SSL_CERTIFICATE_KEY=/etc/nginx/certs/staging.key

# Logging Configuration
LOG_LEVEL=debug
